<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="4-create-feedback" author="architect">
        <createTable tableName="feedback">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="interview_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_feedback_interview"
                             references="interview(id)"/>
            </column>

            <column name="rating" type="smallint"/>
            <column name="comments" type="TEXT"/>
        </createTable>

        <!-- Ensure one feedback per interview -->
        <addUniqueConstraint tableName="feedback"
                             columnNames="interview_id"
                             constraintName="uk_feedback_interview"/>
    </changeSet>
</databaseChangeLog>
